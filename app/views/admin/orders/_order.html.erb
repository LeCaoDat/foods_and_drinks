<tr>
  <td><%= order.rank %></td>
  <td><%= order.user_email %></td>
  <td><%= order.user_name %></td>
  <td><%= order.total %></td>
  <td><%= order.status %></td>
  <td><%= order.created_at %></td>
  <td><%= order.updated_at %></td>
  <td>
    <%= link_to admin_order_order_details_path(order_id: order.id), title: t(".detail") do %>
      <i class="fa fa-info"></i>
    <% end %>
    <% if order.pending? %>
      |
      <%= link_to admin_order_path(id: order.id, status: Settings.orders.accept_status),
        method: :patch, title: t(".accept") do %>
        <i class="fa fa-check"></i>
      <% end %>
      |
      <%= link_to admin_order_path(id: order.id, status: Settings.orders.reject_status),
        method: :patch, title: t(".reject") do %>
        <i class="fa fa-ban"></i>
      <% end %>
    <% end %>
  </td>
</tr>
