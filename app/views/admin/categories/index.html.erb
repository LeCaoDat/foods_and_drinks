<% provide :title, t(".manage_categories_title") %>
<div id="page-wrapper" class="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header"><%= t "admin.layouts.manage_categories" %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="panel-heading">
        <%= link_to t(".add_new"), new_admin_category_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <%= t ".list_category" %>
        </div>
        <div class="panel-body">
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th><%= t ".id" %></th>
                  <th><%= t ".name" %></th>
                  <th><%= t ".parent_id" %></th>
                  <th><%= t ".created_at" %></th>
                  <th><%= t ".updated_at" %></th>
                  <th><%= t ".function" %></th>
                </tr>
              </thead>
              <tbody id="list-category">
                <%= render partial: "category", collection: @categories %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <%= will_paginate @categories %>
    </div>
  </div>
</div>
