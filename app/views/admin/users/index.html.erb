<% provide :title, t(".manage_users_title") %>
<div id="page-wrapper" class="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header"><%= t "admin.layouts.manage_users" %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <%= t ".list_user" %>
          <div class="input-group custom-search-form isearch">
            <%= form_tag admin_users_path, method: :get do %>
              <%= text_field_tag :search, params[:search], class: "form-control sinput",
                placeholder: t(".name_email") %>
              <span class="input-group-btn ssearch">
                <%= button_tag type: "submit", class: "btn btn-default", name: nil do %>
                  <%= content_tag :i, "", class: "fa fa-search" %>
                <% end %>
              </span>
            <% end %>
          </div>
        </div>
        <div class="panel-body">
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th><%= t ".id" %></th>
                  <th><%= t ".name" %></th>
                  <th><%= t ".gender" %></th>
                  <th><%= t ".address" %></th>
                  <th><%= t ".phone" %></th>
                  <th><%= t ".email" %></th>
                  <th><%= t ".actived" %></th>
                  <th><%= t ".function" %></th>
                </tr>
              </thead>
              <tbody id="list-category">
                <%= render partial: "user", collection: @users %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <%= will_paginate @users %>
    </div>
  </div>
</div>
