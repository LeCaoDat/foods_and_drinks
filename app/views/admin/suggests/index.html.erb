<% provide :title, t(".manage_suggests_title") %>
<div id="page-wrapper" class="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header"><%= t "admin.layouts.manage_suggests" %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <%= t ".list_suggest" %>
        </div>
        <div class="panel-body">
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th><%= t ".id" %></th>
                  <th><%= t ".email" %></th>
                  <th><%= t ".category" %></th>
                  <th><%= t ".detail" %></th>
                  <th><%= t ".status" %></th>
                  <th><%= t ".function" %></th>
                </tr>
              </thead>
              <tbody id="list-suggest">
                <%= render partial: "suggest", collection: @suggests %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <%= will_paginate @suggests %>
    </div>
  </div>
</div>
